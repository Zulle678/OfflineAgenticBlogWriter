# URLs and Publishing
NEWS_SOURCE=https://news.google.com

# News Scraper Settings
NEWS_LANGUAGE=en
NEWS_PERIOD=1d
NEWS_NUM_STORIES=10

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_TIMEOUT=300
OLLAMA_NUM_CTX=128000

# Blog Categories
BLOG_CATEGORIES=Technology,Business,World News,Science

# Blog Structure Settings
BLOG_MIN_PARAGRAPHS=3
BLOG_MAX_PARAGRAPHS=10
BLOG_KEYWORDS_PER_POST=5
BLOG_INCLUDE_REFERENCES=true
BLOG_ENABLE_MARKDOWN=true

# Blog Output Settings
LOCAL_BLOG=true
LOCAL_BLOG_PATH=/path/to/your/posts/directory